<Window x:Class="GUI_for_DB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_for_DB"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="GuiForDB" Height="450" Width="800">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Button x:Name="ViewBtn" Click="clicked_btn_EventHandler"
                Content="View" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"
                Foreground="Black" 
                Background="White">
                </Button>
            </Grid>
            <Grid Grid.Column="1">            
                <Button x:Name="InsertBtn" Click="clicked_btn_EventHandler"
                Content="Insert" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"
                Foreground="Black"
                        Background="Gray"> </Button>
            </Grid>
            <Grid Grid.Column="2">
                <Button x:Name="EditBtn" Click="clicked_btn_EventHandler"
                Content="Edit" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"
                Foreground="Black"
                        Background="Gray"> </Button>
            </Grid>
            <Grid Grid.Column="3">
                <Button x:Name="DeleteBtn" Click="clicked_btn_EventHandler"
                Content="Delete" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"
                Foreground="Black"
                        Background="Gray"> </Button>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Content="Table1" x:Name="Clients" Click="click_Table_EventHandler"/>
            <Button Grid.Column="1" Grid.Row="0" Content="Table2" x:Name="Table2" Click="click_Table_EventHandler"/>
            <Button Grid.Column="2" Grid.Row="0" Content="Table3" x:Name="Table3" Click="click_Table_EventHandler"/>
            <Button Grid.Column="0" Grid.Row="1" Content="Table4" x:Name="Table4" Click="click_Table_EventHandler"/>
            <Button Grid.Column="1" Grid.Row="1" Content="Table5" x:Name="Table5" Click="click_Table_EventHandler"/>
            <Button Grid.Column="2" Grid.Row="1" Content="Table6" x:Name="Table6" Click="click_Table_EventHandler"/>
            <Button Grid.Column="0" Grid.Row="2" Content="Table7" x:Name="Table7" Click="click_Table_EventHandler"/>
            <Button Grid.Column="1" Grid.Row="2" Content="Table8" x:Name="Table8" Click="click_Table_EventHandler"/>
            <Button Grid.Column="2" Grid.Row="2" Content="Table9" x:Name="Table9" Click="click_Table_EventHandler"/>
            <Button Grid.Column="0" Grid.Row="3" Content="Table10" x:Name="Table10" Click="click_Table_EventHandler"/>
            <Button Grid.Column="1" Grid.Row="3" Content="Table11" x:Name="Table11" Click="click_Table_EventHandler"/>
            <Button Grid.Column="2" Grid.Row="3" Content="Table12" x:Name="Table12" Click="click_Table_EventHandler"/>
        </Grid>
    </Grid>
</Window>
