<Window x:Class="GUI_for_DB.DBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_for_DB"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="DB" Height="450" Width="800">
    <Grid x:Name="Grid">
        <DataGrid x:Name="TableGrid"
        AutoGenerateColumns="True" ItemsSource="{DynamicResource ResourceKey=columns}">
            <DataGrid.Columns>
            </DataGrid.Columns>
        <Button x:Name="add_btn" Content="Добавить"
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center"
            Click="add_btn_cl"/>
        <Button x:Name="del_btn" Content="Удалить"
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center"
            Click="del_btn_cl"/>
        </DataGrid>
    </Grid>

</Window>